generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  gameId      Int          @id @default(autoincrement())
  players     Player[]     @relation("GamePlayers")
  gameHistory GameHistory?
  gameType    String?
  winner      GameWinner[] @relation("GameWinners")
}

model GameWinner {
  gameId      Int   @unique
  game        Game   @relation("GameWinners", fields: [gameId], references: [gameId])
  discordId   String
  discordName String
  userName    String
  name  String
}

model Player {
  id          Int     @id @default(autoincrement())
  discordId   String  @unique
  discordName String
  userName    String
  name  String
  games       Game[]  @relation("GamePlayers")
  moves       Moves[] @relation("PlayerMoves")
}

model GameHistory {
  gameId Int     @unique
  game   Game    @relation(fields: [gameId], references: [gameId])
  moves  Moves[]
}

model Moves {
  id          Int         @id @default(autoincrement())
  gameId      Int
  gameHistory GameHistory @relation(fields: [gameId], references: [gameId])
  player      Player      @relation("PlayerMoves", fields: [playerId], references: [id])
  card        Card        @relation(fields: [cardId], references: [id])
  playerId    Int
  cardId      Int
}

model Card {
  id       Int     @id @default(autoincrement())
  cardName String
  moves    Moves[]
}
